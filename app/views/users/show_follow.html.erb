<div class="body">
	<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>errors</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
  <div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>
		<!--メモ右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Follow Users</h2>
		<!--users一覧 -->
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @user.followings.each do |user| %>
				<table>
					<tr>
						<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
						<td><%= user.name %> </td>
						<td><%= render 'users/follow_form'%></td>
						<td><%= link_to 'Show', user_path(user) %></td>
					</tr>
				</table>
				<% end %>
			</tbody>
		</table>
		<!--users一覧 -->
	</div>
</div>
</div>
</div>